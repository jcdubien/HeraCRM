{% extends 'base.html.twig' %}

{% block title %}Détail sur la commande : {{ commande.referencecommande }}{% endblock %}

{% block body %}

    <div class=" container-bottom container-top">

        <div class="container jumbotron my-5 titre">
           <div class="col-8">


            <h1 class="'row">
                Reference : {{commande.referencecommande}}
            </h1>
            <p class="'row">Nom : {{ commande.nom }}</p>
            <p class="'row">Prénom : {{ commande.prenom }}</p>
            <p class="'row">Date de la commande : {{ commande.datecommande|date('d-m-Y') }}</p>
            <p class="'row">Email : {{ commande.email }}</p>

           <div class="container container-top container-bottom">

               {% if commande.status =='1' %}
                   <div class="progress">
                       <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Analyse des besoins 25%</div>
                   </div>
               {% endif %}

               {% if commande.status =='2' %}
                   <div class="progress">
                       <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Conception graphique 50 %</div>
                   </div>
               {% endif %}

               {% if commande.status == '3' %}
                   <div class="progress">
                       <div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">Développement 75 %</div>
                   </div>
               {% endif  %}

               {% if commande.status == '4' %}
                   <div class="progress">
                       <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Déploiement 100 %</div>
                   </div>
               {% endif %}

        </div>
        </div>

    </div>
{% endblock %}